{
    // Enable strict type checking for maximum robustness with Python 3.12+
    "typeCheckingMode": "strict",
    // Core type checking settings aligned with modern Python 3.12+ practices
    "reportMissingImports": true,
    "reportMissingTypeStubs": false,
    // Let Ruff handle these (avoid duplication)
    "reportUnusedImport": false,
    "reportUnusedVariable": false,
    "reportUnusedCallResult": false,
    // Enable important type safety checks for modern Python
    "reportAny": "warning",
    "reportUnknownMemberType": "warning",
    "reportUnknownArgumentType": "warning",
    "reportUnknownVariableType": "warning",
    "reportUnknownLambdaType": "warning",
    "reportUnknownParameterType": "warning",
    // Modern Python 3.12+ specific settings
    "reportUnnecessaryTypeIgnoreComment": true,
    "reportUnnecessaryIsInstance": "warning",
    "reportUnnecessaryComparison": "warning",
    "reportDeprecated": "warning",
    // Enhanced type checking for generics and protocols
    "reportInvalidTypeVarUse": true,
    "reportSelfClsParameterName": "warning",
    // Enable modern Python 3.12+ features
    "enableTypeIgnoreComments": true,
    "strictListInference": true,
    "strictDictionaryInference": true,
    "strictSetInference": true,
    // Set Python version to 3.12 for compatibility with project tools
    "pythonVersion": "3.12",
    // Add 'src' to extraPaths for module resolution
    "extraPaths": [
        "src"
    ],
    // Include main source, test, and script directories
    "include": [
        "src/**",
        "tests/**",
        "scripts/**"
    ],
    // Exclude output, virtual environment, and cache directories from analysis
    "exclude": [
        "**/outputs/**",
        "**/.venv/**",
        "**/.mypy_cache/**",
        "**/.ruff_cache/**",
        "**/.pytest_cache/**",
        "**/htmlcov/**",
        "**/old_stuff/**"
    ]
}